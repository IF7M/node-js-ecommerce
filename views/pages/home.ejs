<%- include('partials/header') %>

<main>

  <% if(ads.length > 0){ %>
    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <% ads.forEach((ad)=>{%>
          <div class="carousel-item active">
            <% if(ad.linkto == ''){%>
              <a href="#">
                <img src="\ads_imgs\<%=ad.ad %>" class="d-block w-100 adsliderimg"  alt=<%=ad.title %>>
              </a>
            <%}else{%>
              <a href="<%=ad.linkto %>">
                <img src="\ads_imgs\<%=ad.ad %>" class="d-block w-100 adsliderimg"  alt=<%=ad.title %>>
              </a>
            <%}%>
           
          </div>
      
          <%})%>
      
      
      
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
  <%} else { %>
    <div class="sm"></div>
  <%}%>



  
    <div class="container mt-2">
  
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% Product.slice(-3).forEach((item)=>{ %>
          <div class="col">
            <div class="card shadow-sm">
                <% if(item.thumbImg){%>
                    <img src="\products_imgs\<%=item.thumbImg %>" class="card-img-top" width="100%" height="300" alt="<%=item.name%>" />
                <%} else {%>
                    <img src="\imgs\noimg.png" class="card-img-top" width="100%" height="300" alt="<%=item.name%>" />
                <%}%>
               
              <div class="card-body">
    
                <p class="card-text"><%=item.name%></p>
               
                <% if(item.sprice){%>
                <h4  class="text-decoration-line-through card-text"><%=item.price%></h4>
                <h3><%=item.sprice%></h3>
    
                <% } else{%>
                  <h4  class="card-text"><%=item.price%></h4>
                  <%}%>
    
                <div class="d-flex justify-content-between align-items-center">
                  <div class="d-grid gap-2 d-md-block">
                    <form action="/addtocart" method="post">
                      <input type="hidden" name="item" value=<%=item._id %>>
                    <button type="submit" class="btn btn-lg btn-outline-primary">اضافة للسلة</button>
                  </form>
                  <form action="/checkoutnow" method="post">
                    <input type="hidden" name="item" value=<%=item._id %>>
                    <button type="submit" class="btn btn-lg btn-primary">اشتر الان</button>
                  </form>
                  </div>
    
                </div>
              </div>
            </div>
          </div>
          <% }) %>
    
  
  
            </div>
          </div>
        
  

    
</main>



<%- include('partials/footer') %>