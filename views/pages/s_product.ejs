<%- include('partials/header') %>

<main class="container">

  <div class="row">
    <h1><%=pname%></h1>

    <div class="mt-2 col-xs-12 col-md-5">
      
      <% if(pthumbImg){%>
      <img src="\products_imgs\<%=pthumbImg %>" class="spi " width="100%" height="300" alt="<%=pname%>" />
      <%} else {%>
      <img src="\imgs\noimg.png" class="spi" width="100%" height="300" alt="<%=pname%>" />
      <%}%>
        </div>

        <div class="mt-2 col-xs-12 col-md-7">
          <h2><%=pname%></h2>
          <p><%-psdesc%></p>
          <hr>

          <% if(psprice){%>
            <h4  class="text-decoration-line-through card-text">$<%= parseFloat(pprice).toFixed(2) %></h4>
            <h3>$<%= parseFloat(psprice).toFixed(2) %></h3>

            <% } else{%>
              <h4  class="card-text">$<%= parseFloat(pprice).toFixed(2) %></h4>
              <%}%>
              
                <div class="mt-3">
                    <a href="/cart/add/<%=pslug%>"><button type="button" class="btn btn-lg btn-outline-primary">اضافة للسلة</button></a>
                </div>
          
              

        </div>

  

<div class="col-xs-12 col-md-12">
  <hr>
  <p><%-pdesc%></p>
  <hr>
  <a href="/products/<%=pcategory%>"><p># <%=pcategory%></p></a>
</div>

  </div>

</main>


<%- include('partials/footer') %>