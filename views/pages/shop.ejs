<%- include('partials/header') %>

<main class="container">
<div class="container mt-2">
<h1>جميع المنتجات</h1>
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    <% Product.forEach((item)=>{ %>
    <div class="col">
      <div class="card shadow-sm">
        <% if(item.thumbImg){%>
        <img src="\products_imgs\<%=item.thumbImg %>" class="card-img-top" width="100%" height="300" alt="<%=item.name%>" />
        <%} else {%>
        <img src="\imgs\noimg.png" class="card-img-top" width="100%" height="300" alt="<%=item.name%>" />
        <%}%>
                 
                <div class="card-body">
      
                  <a href="/products/<%=item.category%>/<%=item.slug%>"><p class="card-text"><%=item.name%></p></a>

        <% if(item.sprice){%>
        <h4 class="text-decoration-line-through card-text"><%=item.price%></h4>
        <h3><%=item.sprice%></h3>

        <% } else{%>
        <h4 class="card-text"><%=item.price%></h4>
        <%}%>
      
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="d-grid gap-2 d-md-block">
        
           
                      <div class="mt-3">
                        <a href="/cart/add/<%=item.slug%>"><button type="button" class="btn btn-lg btn-outline-primary">اضافة للسلة</button></a>
                    </div>
       
        
      </div>

    </div>
  </div>
</div>
</div>
<% }) %>



</div>
</div>
</main>




<%- include('partials/footer') %>