<%- include('./partials/adminheader') %>
<main>
<div class="container mt-2">
<h2 class="page-title">تعديل منتج</h2>
<a href="/admin/products" class="btn btn-primary mt-2">الرجوع الى المنتجات</a>
</div>

<div class="container mt-2">
 <form action="/admin/products/edit-product/<%= id %>" method="post" enctype="multipart/form-data" onsubmit="">

<div class="form-group">
    <label for="">اسم المنتج</label>
    <input type="text" class="form-control" name="name" value="<%= name %>" placeholder="اسم المنتج">
</div>


<div class="row">
<div class="form-group col-lg-3 col-md-6 col-sm-6">
    <label for="">السعر</label>
    <input type="number" class="form-control" name="price" value="<%= price %>">
</div>

<div class="form-group col-lg-3 col-md-6 col-sm-6">
    <label for="">السعر بعد الخصم</label>
    <input type="number" class="form-control" name="sprice" value="<%= sprice %>">
</div>

<div class="form-group col-lg-3 col-md-6 col-sm-6">
    <label for="">الكمية</label>
    <input type="number" class="form-control" name="quantity" value="<%= quantity %>">
</div>

<div class="form-group col-lg-3 col-md-6 col-sm-6">
    <label for=""> التصنيف</label>
    <select class="form-select"  name="category">
        <% categories.forEach((category)=>{ %>
            <option value="<%= category.slug %>"><%= category.cname %></option>
        <% }); %>
    </select>
</div>

</div>

<div class="row">
<div class="form-group col-lg-6 col-md-6 col-sm-12">
    <label for="">الرابط</label>
    <input type="text" class="form-control" name="slug" value="<%= slug %>" placeholder="الرابط">
</div>

<div class="form-group col-lg-6 col-md-6 col-sm-12">
    <label for="">الصور</label>
    <input type="file" class="form-control" name="img" id="pimg" multiple onchange="readURL(this)">
    <img src="\products_imgs\<%= thumbImg %>" id="pimgPreview">
</div>
</div>

<div class="form-group">
    <label for="">الوصف القصير</label>
    <textarea class="form-control editor" cols="20" rows="5" name="sdesc"  placeholder="الوصف القصير"><%= sdesc %></textarea>
</div>

<div class="form-group">
    <label for="">الوصف</label>
    <textarea class="form-control editor2" cols="30" rows="10" name="desc"  placeholder="الوصف"><%= desc %></textarea>
</div>

<div class="form-group mt-2">
<button type="submit" class="btn btn-primary" >تعديل</button>
</div>
 </form>


</div>

</main>

<script>

    function readURL(input){
        if(input.files && input.files[0]){
           

                let reader = new FileReader();

            reader.onload = function(e){
                document.querySelector('#pimgPreview').setAttribute('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);
           
            
        }
    };

  
</script>

<%- include('./partials/adminfooter') %>