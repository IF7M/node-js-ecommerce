<%- include('./partials/adminheader') %>
<main>
<div class="container mt-2">
<h2 class="page-title">تعديل الصفحة</h2>
<a href="/admin/pages" class="btn btn-primary mt-2">الرجوع الى الصفحات</a>
</div>

<div class="container">
 <form action="/admin/pages/edit-page/<%= id %>" method="post">
<div class="form-group">
    <label for="">العنوان</label>
    <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title">
</div>
<div class="form-group">
    <label for="">الرابط</label>
    <input type="text" class="form-control" name="slug" value="<%= slug %>" placeholder="Slug">
</div>

<div class="form-group">
    <label for="">المحتوى</label>
    <textarea  class="form-control editor" cols="30" rows="10" name="content"  placeholder="Content"><%= content %></textarea>
</div>

<div class="form-group mt-2">
   
<button class="btn btn-primary" >حفظ التعديلات</button>
</div>
 </form>


</div>

</main>



















<%- include('./partials/adminfooter') %>